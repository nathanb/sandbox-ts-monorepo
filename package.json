{
  "name": "ts-project",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "start": "npm start -w app",
    "build": "npm-run-all -s build:ts build:web",
    "prebuild:ts": "tsc --build --clean",
    "build:ts": "tsc --build",
    "build:web": "npm run build -w web",
    "test": "npm run test --if-present -ws",
    "dev": "npm-run-all -p watch:*",
    "watch:web": "npm start -w web",
    "prewatch:ts": "tsc --build --clean",
    "watch:ts": "tsc --build --watch"
  },
